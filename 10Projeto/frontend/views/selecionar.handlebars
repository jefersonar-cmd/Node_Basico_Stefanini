<form action="/editar" method="POST">
    
    <img src="../images/avatar.png" alt="">
    <input type="text" name="id" value="{{dados.id}}" class="form-control" readonly hidden>
    <input type="text" name="nome" value="{{dados.nome}}" placeholder="Nome" class="form-control">
    <input type="text" name="idade" value="{{dados.idade}}" placeholder="Idade" class="form-control">
    
    <input type="submit" value="Editar" class="btn btn-warning">

    <a href="/deletar/{{dados.id}}" class="btn btn-danger">Remover</a>
    <a href="/" class="btn btn-secundary">Cancelar</a>
</form>